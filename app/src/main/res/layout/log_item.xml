<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/log_row"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="5.0dip"
    android:layout_marginLeft="10.0dip"
    android:layout_marginRight="10.0dip"
    android:layout_marginTop="5.0dip"
    android:foreground="?android:selectableItemBackground"
    card_view:cardCornerRadius="4.0dip"
    card_view:contentPaddingBottom="16.0dip"
    card_view:contentPaddingLeft="13.0dip"
    card_view:contentPaddingRight="16.0dip"
    card_view:contentPaddingTop="16.0dip">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16.0dip"
                android:layout_height="16.0dip"
                android:layout_marginTop="1.0dip"
                android:src="@drawable/ic_keyboard_arrow_right_24dp" />

            <TextView
                android:id="@+id/log_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00 00 00 00 00 00"
                android:textColor="@color/log_send"
                android:textSize="13.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16.0dip"
                android:layout_height="16.0dip"
                android:layout_marginTop="1.0dip"
                android:src="@drawable/ic_keyboard_arrow_left_24dp" />

            <TextView
                android:id="@+id/log_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00 00 00 00 00 00"
                android:textColor="@color/log_receive"
                android:textSize="13.0sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/log_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.0dip"
            android:text="00 00 00 00 00 00"
            android:textSize="12.0sp"
            android:visibility="gone" />
    </LinearLayout>
</android.support.v7.widget.CardView>